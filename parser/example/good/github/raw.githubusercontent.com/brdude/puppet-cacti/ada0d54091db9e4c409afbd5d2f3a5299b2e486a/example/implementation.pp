class cacti::implementation {
  
    #############################################################################################
  #                                                                                           #
  #                Location where templates will be stored for import                         #
  #                                                                                           #
  #############################################################################################

  file {
    "/var/www/cacti/cacti_templates/":
    ensure => directory,
  }

  #############################################################################################
  #                                                                                           #
  #                                          Printers                                         #
  #                                                                                           #
  #############################################################################################

  include cacti::implementation::printers

  #############################################################################################
  #                                                                                           #
  #                                   Storage Devices                                         #
  #                                                                                           #
  #############################################################################################

  include cacti::implementation::storagedevices

  #############################################################################################
  #                                                                                           #
  #                                 Networking Devices                                        #
  #                                                                                           #
  #############################################################################################

  include cacti::implementation::networkingdevices

  #############################################################################################
  #                                                                                           #
  #                                    UPS Devices                                            #
  #                                                                                           #
  #############################################################################################

  include cacti::implementation::upsdevices


} # class cacti::implementation
